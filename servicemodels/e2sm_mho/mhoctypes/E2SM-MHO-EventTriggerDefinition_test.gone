func createE2SmMhoEventTriggerDefinitionMsg() (*e2sm_mho.E2SmMhoEventTriggerDefinition, error) {

	// e2SmMhoEventTriggerDefinition := pdubuilder.CreateE2SmMhoEventTriggerDefinition() //ToDo - fill in arguments here(if this function exists

	e2SmMhoEventTriggerDefinition := e2sm_mho.E2SmMhoEventTriggerDefinition{
		IndicationHeaderFormat1: nil,
		E2SmMhoEventTriggerDefinition: &e2sm_mho.E2SmMhoEventTriggerDefinition_indicationHeaderFormat1{
			IndicationHeaderFormat1: &e2sm_mho.indicationHeaderFormat1{
				Value: nil,
			},
		},
	}

	if err := e2SmMhoEventTriggerDefinition.Validate(); err != nil {
		return nil, fmt.Errorf("error validating E2SmMhoEventTriggerDefinition %s", err.Error())
	}
	return &e2SmMhoEventTriggerDefinition, nil
}

func Test_xerEncodingE2SmMhoEventTriggerDefinition(t *testing.T) {

	e2SmMhoEventTriggerDefinition, err := createE2SmMhoEventTriggerDefinitionMsg()
	assert.NilError(t, err, "Error creating E2SmMhoEventTriggerDefinition PDU")

	xer, err := xerEncodeE2SmMhoEventTriggerDefinition(e2SmMhoEventTriggerDefinition)
	assert.NilError(t, err)
	assert.Equal(t, 1, len(xer)) //ToDo - adjust length of the XER encoded message
	t.Logf("E2SmMhoEventTriggerDefinition XER\n%s", string(xer))

	result, err := xerDecodeE2SmMhoEventTriggerDefinition(xer)
	assert.NilError(t, err)
	assert.Assert(t, result != nil)
	t.Logf("E2SmMhoEventTriggerDefinition XER - decoded\n%v", result)
	//ToDo - adjust field's verification

	//This one if for OneOf fields

	assert.DeepEqual(t, e2SmMhoEventTriggerDefinition.GetIndicationHeaderFormat1().GetValue(), result.GetIndicationHeaderFormat1().GetValue())

}

