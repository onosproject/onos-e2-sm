package mhoctypes

import (
	"encoding/hex"
	"fmt"
	pdubuilder "github.com/onosproject/onos-e2-sm/servicemodels/e2sm_mho/pdubuilder"
	e2sm_mho "github.com/onosproject/onos-e2-sm/servicemodels/e2sm_mho/v1/e2sm-mho" //ToDo - Make imports more dynamic
	"gotest.tools/assert"
	"testing"
)

func createPlmnIdentityMsg() (*e2sm_mho.PlmnIdentity, error) {

	// plmnIdentity := pdubuilder.CreatePlmnIdentity() //ToDo - fill in arguments here(if this function exists

	plmnIdentity := e2sm_mho.PlmnIdentity{
		Value: nil,
	}

	if err := plmnIdentity.Validate(); err != nil {
		return nil, fmt.Errorf("error validating PlmnIdentity %s", err.Error())
	}
	return &plmnIdentity, nil
}

func Test_xerEncodingPlmnIdentity(t *testing.T) {

	plmnIdentity, err := createPlmnIdentityMsg()
	assert.NilError(t, err, "Error creating PlmnIdentity PDU")

	xer, err := xerEncodePlmnIdentity(plmnIdentity)
	assert.NilError(t, err)
	assert.Equal(t, 1, len(xer)) //ToDo - adjust length of the XER encoded message
	t.Logf("PlmnIdentity XER\n%s", string(xer))

	result, err := xerDecodePlmnIdentity(xer)
	assert.NilError(t, err)
	assert.Assert(t, result != nil)
	t.Logf("PlmnIdentity XER - decoded\n%v", result)
	//ToDo - adjust field's verification
	assert.Equal(t, plmnIdentity.GetValue(), result.GetValue())

}

func Test_perEncodingPlmnIdentity(t *testing.T) {

	plmnIdentity, err := createPlmnIdentityMsg()
	assert.NilError(t, err, "Error creating PlmnIdentity PDU")

	per, err := perEncodePlmnIdentity(plmnIdentity)
	assert.NilError(t, err)
	assert.Equal(t, 1, len(per)) // ToDo - adjust length of the PER encoded message
	t.Logf("PlmnIdentity PER\n%v", hex.Dump(per))

	result, err := perDecodePlmnIdentity(per)
	assert.NilError(t, err)
	assert.Assert(t, result != nil)
	t.Logf("PlmnIdentity PER - decoded\n%v", result)
	//ToDo - adjust field's verification
	assert.Equal(t, plmnIdentity.GetValue(), result.GetValue())

}
