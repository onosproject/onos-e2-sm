package mhoctypes

import (
	"encoding/hex"
	"fmt"
	pdubuilder "github.com/onosproject/onos-e2-sm/servicemodels/e2sm_mho/pdubuilder"
	e2sm_mho "github.com/onosproject/onos-e2-sm/servicemodels/e2sm_mho/v1/e2sm-mho" //ToDo - Make imports more dynamic
	"gotest.tools/assert"
	"testing"
)

func createRicStyleTypeMsg() (*e2sm_mho.RicStyleType, error) {

	// ricStyleType := pdubuilder.CreateRicStyleType() //ToDo - fill in arguments here(if this function exists

	ricStyleType := e2sm_mho.RicStyleType{
		Value: nil,
	}

	if err := ricStyleType.Validate(); err != nil {
		return nil, fmt.Errorf("error validating RicStyleType %s", err.Error())
	}
	return &ricStyleType, nil
}

func Test_xerEncodingRicStyleType(t *testing.T) {

	ricStyleType, err := createRicStyleTypeMsg()
	assert.NilError(t, err, "Error creating RicStyleType PDU")

	xer, err := xerEncodeRicStyleType(ricStyleType)
	assert.NilError(t, err)
	assert.Equal(t, 1, len(xer)) //ToDo - adjust length of the XER encoded message
	t.Logf("RicStyleType XER\n%s", string(xer))

	result, err := xerDecodeRicStyleType(xer)
	assert.NilError(t, err)
	assert.Assert(t, result != nil)
	t.Logf("RicStyleType XER - decoded\n%v", result)
	//ToDo - adjust field's verification
	assert.Equal(t, ricStyleType.GetValue(), result.GetValue())

}

func Test_perEncodingRicStyleType(t *testing.T) {

	ricStyleType, err := createRicStyleTypeMsg()
	assert.NilError(t, err, "Error creating RicStyleType PDU")

	per, err := perEncodeRicStyleType(ricStyleType)
	assert.NilError(t, err)
	assert.Equal(t, 1, len(per)) // ToDo - adjust length of the PER encoded message
	t.Logf("RicStyleType PER\n%v", hex.Dump(per))

	result, err := perDecodeRicStyleType(per)
	assert.NilError(t, err)
	assert.Assert(t, result != nil)
	t.Logf("RicStyleType PER - decoded\n%v", result)
	//ToDo - adjust field's verification
	assert.Equal(t, ricStyleType.GetValue(), result.GetValue())

}
