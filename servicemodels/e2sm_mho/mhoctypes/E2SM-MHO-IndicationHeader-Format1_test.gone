func createE2SmMhoIndicationHeaderFormat1Msg() (*e2sm_mho.E2SmMhoIndicationHeaderFormat1, error) {

	// e2SmMhoIndicationHeaderFormat1 := pdubuilder.CreateE2SmMhoIndicationHeaderFormat1() //ToDo - fill in arguments here(if this function exists

	e2SmMhoIndicationHeaderFormat1 := e2sm_mho.E2SmMhoIndicationHeaderFormat1{
		Cgi: nil,
	}

	if err := e2SmMhoIndicationHeaderFormat1.Validate(); err != nil {
		return nil, fmt.Errorf("error validating E2SmMhoIndicationHeaderFormat1 %s", err.Error())
	}
	return &e2SmMhoIndicationHeaderFormat1, nil
}

func Test_xerEncodingE2SmMhoIndicationHeaderFormat1(t *testing.T) {

	e2SmMhoIndicationHeaderFormat1, err := createE2SmMhoIndicationHeaderFormat1Msg()
	assert.NilError(t, err, "Error creating E2SmMhoIndicationHeaderFormat1 PDU")

	xer, err := xerEncodeE2SmMhoIndicationHeaderFormat1(e2SmMhoIndicationHeaderFormat1)
	assert.NilError(t, err)
	assert.Equal(t, 1, len(xer)) //ToDo - adjust length of the XER encoded message
	t.Logf("E2SmMhoIndicationHeaderFormat1 XER\n%s", string(xer))

	result, err := xerDecodeE2SmMhoIndicationHeaderFormat1(xer)
	assert.NilError(t, err)
	assert.Assert(t, result != nil)
	t.Logf("E2SmMhoIndicationHeaderFormat1 XER - decoded\n%v", result)
	//ToDo - adjust field's verification
	assert.Equal(t, e2SmMhoIndicationHeaderFormat1.GetCgi(), result.GetCgi())

}

func Test_perEncodingE2SmMhoIndicationHeaderFormat1(t *testing.T) {

	e2SmMhoIndicationHeaderFormat1, err := createE2SmMhoIndicationHeaderFormat1Msg()
	assert.NilError(t, err, "Error creating E2SmMhoIndicationHeaderFormat1 PDU")

	per, err := perEncodeE2SmMhoIndicationHeaderFormat1(e2SmMhoIndicationHeaderFormat1)
	assert.NilError(t, err)
	assert.Equal(t, 1, len(per)) // ToDo - adjust length of the PER encoded message
	t.Logf("E2SmMhoIndicationHeaderFormat1 PER\n%v", hex.Dump(per))

	result, err := perDecodeE2SmMhoIndicationHeaderFormat1(per)
	assert.NilError(t, err)
	assert.Assert(t, result != nil)
	t.Logf("E2SmMhoIndicationHeaderFormat1 PER - decoded\n%v", result)
	//ToDo - adjust field's verification
	assert.Equal(t, e2SmMhoIndicationHeaderFormat1.GetCgi(), result.GetCgi())

}
