func createE2SmMhoEventTriggerDefinitionFormat1Msg() (*e2sm_mho.E2SmMhoEventTriggerDefinitionFormat1, error) {

	// e2SmMhoEventTriggerDefinitionFormat1 := pdubuilder.CreateE2SmMhoEventTriggerDefinitionFormat1() //ToDo - fill in arguments here(if this function exists

	e2SmMhoEventTriggerDefinitionFormat1 := e2sm_mho.E2SmMhoEventTriggerDefinitionFormat1{
		TriggerType:       nil,
		ReportingPeriodMs: nil,
	}

	if err := e2SmMhoEventTriggerDefinitionFormat1.Validate(); err != nil {
		return nil, fmt.Errorf("error validating E2SmMhoEventTriggerDefinitionFormat1 %s", err.Error())
	}
	return &e2SmMhoEventTriggerDefinitionFormat1, nil
}

func Test_xerEncodingE2SmMhoEventTriggerDefinitionFormat1(t *testing.T) {

	e2SmMhoEventTriggerDefinitionFormat1, err := createE2SmMhoEventTriggerDefinitionFormat1Msg()
	assert.NilError(t, err, "Error creating E2SmMhoEventTriggerDefinitionFormat1 PDU")

	xer, err := xerEncodeE2SmMhoEventTriggerDefinitionFormat1(e2SmMhoEventTriggerDefinitionFormat1)
	assert.NilError(t, err)
	assert.Equal(t, 1, len(xer)) //ToDo - adjust length of the XER encoded message
	t.Logf("E2SmMhoEventTriggerDefinitionFormat1 XER\n%s", string(xer))

	result, err := xerDecodeE2SmMhoEventTriggerDefinitionFormat1(xer)
	assert.NilError(t, err)
	assert.Assert(t, result != nil)
	t.Logf("E2SmMhoEventTriggerDefinitionFormat1 XER - decoded\n%v", result)
	//ToDo - adjust field's verification
	assert.Equal(t, e2SmMhoEventTriggerDefinitionFormat1.GetTriggerType(), result.GetTriggerType())
	assert.Equal(t, e2SmMhoEventTriggerDefinitionFormat1.GetReportingPeriodMs(), result.GetReportingPeriodMs())

}

func Test_perEncodingE2SmMhoEventTriggerDefinitionFormat1(t *testing.T) {

	e2SmMhoEventTriggerDefinitionFormat1, err := createE2SmMhoEventTriggerDefinitionFormat1Msg()
